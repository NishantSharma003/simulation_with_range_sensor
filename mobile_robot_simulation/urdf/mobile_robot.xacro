<?xml version="1.0" ?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="mobile_robot">
  
  <!-- including xacro files -->
  
  <xacro:include filename="robot_inertia.xacro" />
  <xacro:include filename="lidar.xacro" />
  <xacro:include filename="ultrasonic_c.xacro" />
  <xacro:include filename="ultrasonic_l.xacro" />
  <xacro:include filename="ultrasonic_r.xacro" />
  <xacro:include filename="ultrasonic_s_l.xacro" />
  <xacro:include filename="ultrasonic_s_r.xacro" />
  
  <!--<xacro:include filename="ultrasonic_test.xacro" />-->

  <material name="black">
    <color rgba="0.0 0.0 0.0 1.0"/>
  </material>
  <material name="blue">
    <color rgba="0.203125 0.23828125 0.28515625 1.0"/>
  </material>
  <material name="green">
    <color rgba="0.0 0.8 0.0 1.0"/>
  </material>
  <material name="grey">
    <color rgba="0.2 0.2 0.2 1.0"/>
  </material>
  <material name="orange">
    <color rgba="1.0 0.423529411765 0.0392156862745 1.0"/>
  </material>
  <material name="brown">
    <color rgba="0.870588235294 0.811764705882 0.764705882353 1.0"/>
  </material>
  <material name="red">
    <color rgba="0.80078125 0.12890625 0.1328125 1.0"/>
  </material>
  <material name="white">
    <color rgba="1.0 1.0 1.0 1.0"/>
  </material>
  
  <gazebo reference="chassis">
    <material>Gazebo/White</material>
  </gazebo>
  <gazebo reference="left_wheel">
    <material>Gazebo/Blue</material>
  </gazebo>
  <gazebo reference="right_wheel">
    <material>Gazebo/Blue</material>
  </gazebo>

   <gazebo reference="left_rod">
    <material>Gazebo/Black</material>
  </gazebo>
  <gazebo reference="right_rod">
    <material>Gazebo/Black</material>
  </gazebo>
  <gazebo reference="second_plate">
    <material>Gazebo/White</material>
  </gazebo>

  <gazebo>
    <plugin filename="libgazebo_ros_diff_drive.so" name="differential_drive_controller">
      <legacyMode>false</legacyMode>
      <alwaysOn>true</alwaysOn>
      <updateRate>20</updateRate>
      <leftJoint>left_wheel_joint</leftJoint>
      <rightJoint>right_wheel_joint</rightJoint>
      <wheelSeparation>0.3</wheelSeparation>
      <wheelDiameter>0.1</wheelDiameter>
      <torque>0.08</torque>
      <commandTopic>cmd_vel</commandTopic>
      <odometryTopic>odom</odometryTopic>
      <odometryFrame>odom</odometryFrame>
      <robotBaseFrame>base_link</robotBaseFrame>
    </plugin>
  </gazebo>



    <link name="base_link">
    </link>

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="0.1 0 0"/>
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0 0 0.025"/>
            <geometry>
               <box size="0.4 0.3 0.05"/>
            </geometry>  
            <material name="white"/> 
        </visual> 
        <collision>
            <origin xyz="0 0 0.025"/>
            <geometry>
               <box size="0.4 0.3 0.05"/>
            </geometry>  
        </collision>
        <xacro:box_inertia mass="0.5" x="0.4" y="0.3" z="0.05">
            <origin xyz="0 0 0.025" rpy="0 0 0"/>
        </xacro:box_inertia>    
    </link>

    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0 0.17 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="left_wheel">
        <visual>
            <geometry>
               <cylinder radius="0.05" length="0.04"/>
            </geometry>   
            <material name="blue"/>
        </visual> 
        <collision>
            <geometry>
               <cylinder radius="0.05" length="0.04"/>
            </geometry>   
        </collision> 
        <xacro:cylinder_inertia mass="0.1" length="0.4" radius="0.05"> 
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:cylinder_inertia>
    </link>


    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0 -0.17 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="right_wheel">
        <visual>
            <geometry>
               <cylinder radius="0.05" length="0.04"/>
            </geometry>   
            <material name="blue"/>
        </visual> 
        <collision>
            <geometry>
               <cylinder radius="0.05" length="0.04"/>
            </geometry>   
        </collision> 
        <xacro:cylinder_inertia mass="0.1" length="0.4" radius="0.05"> 
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:cylinder_inertia>
    </link>

    <joint name="castor_joint" type="fixed">
        <parent link="chassis"/>
        <child link="castor"/>
        <origin xyz="0.125 0 0"/>
    </joint>

    <link name="castor">
        <visual>
            <geometry>
               <sphere radius="0.05"/>
            </geometry>   
            <material name="blue"/>
        </visual> 
        <collision>
            <geometry>
               <sphere radius="0.05"/>
            </geometry>   
        </collision> 
        <xacro:sphere_inertia mass="0.1" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:sphere_inertia> 
    </link>

  <gazebo reference="castor">
    <material>Gazebo/Black</material>
    <mu1 value="0.001"/>
    <mu2 value="0.001"/>
  </gazebo>

  <!-- double decker -->
  <joint name="left_rod_joint" type="fixed">
        <parent link="chassis"/>
        <child link="left_rod"/>
        <origin xyz="0 0.1 0.15"/>
    </joint>

    <link name="left_rod">
        <visual>
            <origin xyz="0 0 0"/>
            <geometry>
               <box size="0.02 0.02 0.20"/>
            </geometry>  
            <material name="black"/> 
        </visual> 
        <collision>
            <origin xyz="0 0 0"/>
            <geometry>
               <box size="0.02 0.02 0.20"/>
            </geometry>  
        </collision>
        <xacro:box_inertia mass="0.1" x="0.02" y="0.02" z="0.20">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:box_inertia>    
    </link>     

    <joint name="right_rod_joint" type="fixed">
        <parent link="chassis"/>
        <child link="right_rod"/>
        <origin xyz="0 -0.1 0.15"/>
    </joint>

    <link name="right_rod">
        <visual>
            <origin xyz="0 0 0"/>
            <geometry>
               <box size="0.02 0.02 0.20"/>
            </geometry>  
            <material name="black"/> 
        </visual> 
        <collision>
            <origin xyz="0 0 0"/>
            <geometry>
               <box size="0.02 0.02 0.20"/>
            </geometry>  
        </collision>
        <xacro:box_inertia mass="0.1" x="0.02" y="0.02" z="0.20">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:box_inertia>    
    </link>    


    <!-- second plate-->

    <joint name="second_plate_joint" type="fixed">
        <parent link="chassis"/>
        <child link="second_plate"/>
        <origin xyz="0 0 0.25"/>
    </joint>

    <link name="second_plate">
        <visual>
            <origin xyz="0 0 0"/>
            <geometry>
               <box size="0.4 0.3 0.02"/>
            </geometry>  
            <material name="white"/> 
        </visual> 
        <collision>
            <origin xyz="0 0 0"/>
            <geometry>
               <box size="0.4 0.3 0.02"/>
            </geometry>  
        </collision>
        <xacro:box_inertia mass="0.1" x="0.4" y="0.3" z="0.02">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:box_inertia>    
    </link>







</robot>